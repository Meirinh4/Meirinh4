    <script>
        function clicar(){
            var gender = window.document.getElementById('input-gender')
            var peso = window.document.getElementById('input-peso')
            var idade = window.document.getElementById('input-idade')
            var altura = window.document.getElementById('input-altura')
            var resultado = window.document.getElementById('seguquadro')
            const pes = Number(peso.value)
            const altur = Number(altura.value)
            resultado.innerText = pes/((altur/100)**2)
        }
